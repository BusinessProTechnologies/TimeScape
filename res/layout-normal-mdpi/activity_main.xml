<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/inner_bg">

    <!--
         <RelativeLayout
        android:id="@+id/page_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal" >
    -->

    <LinearLayout
        android:id="@+id/layProj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="185dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgView_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"
            android:text="New Project"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
           	android:background="@drawable/newprojectselector" />

        <ImageView
            android:id="@+id/imgView_2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imgView_1"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15dip"
            android:text="Existing Morph"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/exprojectselector" />
       
    </LinearLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_below="@id/layProj"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
	    <ImageView
            android:id="@+id/imgView_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/fbfrontselector" />
	    <ImageView
            android:id="@+id/imgView_4"
            android:layout_below="@id/imgView_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/twitterfrontselector" />
	</RelativeLayout>
</RelativeLayout>