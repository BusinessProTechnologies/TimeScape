<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    >
    <RelativeLayout
        	android:id="@+id/dialogRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:padding="2dp">
	 	<ImageView
	 	    android:id="@+id/dialogBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box1"  />
	 	<ImageView
	        android:id="@+id/dialogCancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@id/dialogBg"
	        android:src="@drawable/close_button" />
 	</RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/addFrmCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:text="Open Camera"
            android:background="@drawable/cameraselector" />
        <ImageView
            android:id="@+id/addFrmGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/addFrmCamera"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:text="Open Photo Gallery"
            android:background="@drawable/libraryselector" />
        
    </LinearLayout>

</RelativeLayout>