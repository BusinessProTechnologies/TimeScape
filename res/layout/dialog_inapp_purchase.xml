<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    >
    <RelativeLayout
        	android:id="@+id/dialogRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:padding="2dp"
        >
 	<ImageView
 	    android:id="@+id/dialogInAppBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box1" 
             />
 	</RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/dialogRL"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/inAppCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:background="@drawable/cancelpurchsselector" />
        <ImageView
            android:id="@+id/inAppContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginLeft="15dp"
            android:background="@drawable/continuepurchsselector" />
        
    </LinearLayout>

</RelativeLayout>